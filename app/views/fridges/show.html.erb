<h2> <%= current_user.first_name %>'s Fridge </h2>

  <% @ingredients.each do |ingredient| %>
    <div class="d-flex">
      <div>
        <%= cl_image_tag ingredient.photo.key, height: 200, width: 200, crop: :fill %>
      </div>
      <div>
        <p><%= ingredient.name %></p>
        <p>Quantity: <%= ingredient.quantity %></p>
        <p>Expiration Date: <%= ingredient.expiration_date %></p>
      </div>
      <%= link_to edit_fridge_ingredient_path(ingredient) do %>
        Edit ingredientes
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </div>
  <% end  %>
  <%= link_to new_fridge_ingredient_path(@fridge) do %>
    Add ingredientes!
    <i class="fa-solid fa-plus"></i>
  <% end %>
  <%= link_to recipes_path do %>
    SHUFFLE!!
    <i class="fa-solid fa-plus"></i>
  <% end %>
