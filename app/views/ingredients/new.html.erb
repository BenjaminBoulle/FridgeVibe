<%= simple_form_for [@fridge, @ingredient], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :name %>

  <%= f.input :amount%>
  <%= f.input :type, collection: Ingredient::TYPE %>
  <%= f.input :expiration_date, as: :string, input_html: { data: { flatpickr_target: "expirationDate" } }  %>
  <%= f.input :photo, as: :file %>

  <%= f.button :submit %>
<% end %>
