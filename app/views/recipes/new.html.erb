<%= simple_form_for(@recipe) do |f| %>
  <%= f.input :name %>
  <%= f.input :ingredients%>
  <%= f.input :description %>
  <%= f.input :cook_time, placeholder: '0' %>
  <%= f.input :prep_time, placeholder: '0' %>
  <%= f.input :cuisine,collection: Recipe::CUISINE%>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit Recipe", class: "btn btn-danger" %>
<% end %>
