<h2><%= @recipe.name %></h2>
<p>
  <ul>
    <%@recipe.ingredients.split(',').each do |ingredient| %>
      <li> <%= ingredient %> </li>
    <% end %>
  </ul>
</p>

<p>
  <ul>
    <% @recipe.description.split('.').each do |description| %>
      <li> <%= description %> </li>
    <% end %>
  </ul>
</p>
<p>
  <%= link_to recipe_path(@recipe), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    Delete Your Recipe
  <% end %>
</p>

<br>
<%= link_to fridge_recipes_path(@fridge), class: "btn btn-primary" do %>
  Back to recipes
<% end %>

<div class="reviewbox">
  <p><strong>REVIEWS</strong></p>
  <ul class="list-group">
    <% @recipe.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= review.user.first_name %> <%= review.user.last_name %>
        <% review.rating.times do %>
          <%= "â­" %>
        <% end %>
      </li>
      <p>
        <% if current_user == review.user %>
          <%= link_to review_path(review), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            Delete Your Review
          <% end %>
        <% end %>
      </p>
    <% end %>
    <p>
      <%= link_to  new_fridge_recipe_review_path(@fridge, @recipe), class: "btn btn-primary" do %>
        Add a review
      <% end %>
    </p>
  </ul>
</div>
