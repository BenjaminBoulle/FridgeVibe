<h2><%= @recipe.name %></h2>
<p>
  <ul>
    <%@recipe.ingredients.split(',').each do |ingredient| %>
      <li> <%= ingredient %> </li>
    <% end %>
  </ul>
</p>

<p><% @recipe.description.split('.').each do |description| %></p>
      <li> <%= description %> </li>
    <% end %>

<p>
  <%= link_to "Delete Your Recipe", recipe_path(@recipe), class: "btn btn-primary",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</p>

<br>
<%= link_to "Back to recipes", recipes_path, class: "btn btn-primary" %>


<div class="reviewbox">
  <p><strong>REVIEWS</strong></p>
  <ul class="list-group">
    <% @recipe.reviews.each do |review| %>

      <li class="list-group-item">
        <%= review.content %>
        <%= review.user.first_name %> <%= review.user.last_name %>
        <% review.rating.times do %>
          <%= "⭐" %>
        <% end %>
      </li>



      <p>
      <% if current_user == review.user %>
        <%= link_to "Delete Your Review", review_path(review), class: "btn btn-primary",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <% end %>
      </p>

    <% end %>
        <p>
      <%= link_to 'Add a review', new_recipe_review_path(@recipe), class: "btn btn-primary"%>
      </p>
  </ul>
</div>
